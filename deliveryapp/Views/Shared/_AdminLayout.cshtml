<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tables.custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.user.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

</head>
<body>

    <button class="mobile-toggle d-md-none" onclick="toggleMobileSidebar()">
        <i class="fas fa-bars"></i>
    </button>
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <a href="#" class="logo">
                <i class="fas fa-cube"></i>
                <span>Ñamigo</span>
            </a>
            <button class="toggle-btn d-none d-md-block" onclick="toggleSidebar()">
                <i class="fas fa-chevron-left" id="toggleIcon"></i>
            </button>
        </div>

        <div class="nav-menu">
            <div class="nav-item">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
            </div>
            <div class="nav-item">
                <a asp-controller="OrderManagement" asp-action="Index" class="nav-link">
                    <i class="fas fa-chart-bar"></i>
                    <span>Ordenes</span>
                </a>
            </div>
            <div class="nav-item">
                <a class="nav-link" style="position: relative;" asp-controller="ProductManagement" asp-action="Index">
                    <i class="fa-solid fa-burger"></i>
                    <span>Productos</span>
                </a>
            </div>
            <div class="nav-item">
                <a class="nav-link" style="position: relative;" asp-controller="RestaurantManagement" asp-action="Index">
                    <i class="fa-solid fa-utensils"></i>
                    <span>Restaurantes</span>
                </a>
            </div>
            <div class="nav-item">
                <a class="nav-link" asp-controller="RepartidorManagement" asp-action="Index">
                    <i class="fas fa-users"></i>
                    <span>Repartidores</span>
                </a>
            </div>
        </div>
        <div class="user-profile">
            <div class="user-info">
                <div class="user-avatar">JD</div>
                <div class="user-details">
                    <div class="user-name">Username</div>
                    <div class="user-role">Administrator</div>
                </div>
            </div>
        </div>
    </nav>
    <main class="main-content" id="mainContent">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminsidebar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>