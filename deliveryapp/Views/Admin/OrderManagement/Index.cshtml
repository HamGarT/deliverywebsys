                                {
                                    <div class=""><span class="custom-badge badge-pending">@item.Status</span></div>
                                }
                                else if (item.Status == "Entregado")
                                {
                                    <div class=""><span class="custom-badge badge-success">@item.Status</span></div>
                                }
